<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stereci.memgame.Game4x4Activity"
    android:layout_row="3"
    android:layout_column="0"
    android:background="@mipmap/arkares">


    <GridLayout
        android:id="@+id/grid_layout_4x4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.stereci.memgame.Game4x4Activity"
    android:columnCount="4"
    android:rowCount="4"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/cancel"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp">


</GridLayout>

    <Button
        android:text="Stop x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancel"
        android:layout_marginLeft="190dp"
        android:layout_marginStart="16dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/grid_layout_4x4" />

    <Button
        android:text="Restart x1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="14dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cancel" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:textSize="18sp"
        tools:textColor="@android:color/holo_green_light"
        android:textColor="@android:color/holo_green_light"
        android:layout_below="@+id/cancel"
        android:layout_toEndOf="@+id/cancel" />

</RelativeLayout>